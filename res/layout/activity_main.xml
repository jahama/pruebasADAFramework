<?xml version="1.0" encoding="utf-8"?>

<ScrollView 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools" 
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:scrollbars="vertical"
	android:padding="5dp">
       
	<LinearLayout 
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
	    <Button 
	        android:id="@+id/Command:NewCompany"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="executeCommand"
	        android:text="@string/command_new_company"/>
	    
	    <Button 
	        android:id="@+id/Command:NewWorker"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="executeCommand"
	        android:text="@string/command_new_worker"/>
	    
	    <Button 
	        android:id="@+id/Command:NewDirective"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="executeCommand"
	        android:text="@string/command_new_directive"/>
	    
	</LinearLayout>
</ScrollView>